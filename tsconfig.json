{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2015",
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2017"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "lib/@types/*"]
    },
    "types": ["react", "react-reconciler"],
    "explainFiles": true,
    "skipLibCheck": true
  }
}
